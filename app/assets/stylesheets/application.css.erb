body, html {
    margin: 0; padding: 0; height: 100%; overflow: hidden;
    background: #292929;
}

#music {
  position: absolute;
  z-index: 100000;
  top:0px;
  right:0px;
}

#introduction {
  position:absolute; left: 0; right: 0; bottom: 0; top: 0px; width: 100%; height: 100%;
  background-color: #292929;
  background-image: url(<%= asset_path 'background.jpg' %>);
  background-attachment: fixed;
  background-position: center; 
  z-index: 2500;
  background-size: cover;
  cursor: pointer;
}

.intro-text {
  color: white;

  text-align: center;
  position: relative;

  top: 50%;
  margin-top: -120px;
}

.grab-focus {
  position: absolute;
  bottom: 0px;
  left: 0px;
  opacity: 0;
}

#introduction h1 {
  font-weight: 100;
  font-size: 120px;
}

#introduction h2 {
  font-weight: 200;
  font-size: 45px;
}

#content {
    position:absolute; left: 0; right: 0; bottom: 0; top: 0px; 
}

#died, #win {
  height: 100%;
  width: 100%;
  position: absolute;
  z-index: 5000;
  display: none;
}

#died {
  background-color: black;
}

#win {
  background-color: #006400;
}

#died-text, #win-text {
  display: block;
  color: white;
  position: absolute;
  width: 100%;
  text-align: center;
  top: 50%;
  margin-top: -240px;
  height: 480px;
}

#win-text {
  margin-top: -300px;
  height: 600px;
}

#died-text a.btn, #win-text a.btn {
  margin-top: 25px;
  font-size: 50px;
  padding: 10px 50px;
}

#died-text h2, #win-text h2 {
  font-size: 200px;
  line-height: 200px;
  text-transform: uppercase;
}

#died-text h3, #win-text h3 {
  font-size: 50px;
  line-height: 50px;
  text-transform: uppercase;
}

#died-text h4, #win-text h4 {
  font-size: 30px;
  line-height: 35px;
}

iframe {
  position: absolute;
}

.is-hidden {
  display: none;
}

.blinking-cursor {
  font-weight: 100;
  color: #2E3D48;
  -webkit-animation: 1.2s blink step-end infinite;
  -moz-animation: 1.2s blink step-end infinite;
  -ms-animation: 1.2s blink step-end infinite;
  -o-animation: 1.2s blink step-end infinite;
  animation: 1.2s blink step-end infinite;
}

@keyframes "blink" {
  from, to {
    color: transparent;
  }
  50% {
    color: white;
  }
}

@-moz-keyframes blink {
  from, to {
    color: transparent;
  }
  50% {
    color: white;
  }
}

@-webkit-keyframes "blink" {
  from, to {
    color: transparent;
  }
  50% {
    color: white;
  }
}

@-ms-keyframes "blink" {
  from, to {
    color: transparent;
  }
  50% {
    color: white;
  }
}

@-o-keyframes "blink" {
  from, to {
    color: transparent;
  }
  50% {
    color: black;
  }
}

